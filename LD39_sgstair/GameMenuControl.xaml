<UserControl x:Class="LD39_sgstair.GameMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LD39_sgstair"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="Black">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top"  Margin="0">
            <Label x:Name="label" Content="Dark Lab Escape" Foreground="WhiteSmoke" FontSize="72" HorizontalAlignment="Center" />

            <Separator Height="40" Margin="0" Visibility="Hidden"/>
            <Button x:Name="btnStartGame" Content="Start Game" Width="300" Height="45" Click="btnStartGame_Click" FontSize="24"/>

            <Separator Height="40" Margin="0" Visibility="Hidden"/>
            <Button x:Name="btnLevelEditor" Content="Level Editor" Width="300" Height="45" FontSize="24" Click="btnLevelEditor_Click"/>

            <Separator Height="40" Margin="0" Visibility="Hidden"/>
            <Button x:Name="btnExitGame" Content="Exit"  Width="300" Height="45" Click="btnExitGame_Click" FontSize="24"/>

        </StackPanel>
    </Grid>
</UserControl>
